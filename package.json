{
  "name": "crossplatform-ecommerce",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend/*",
    "frontend/*"
  ],
  "description": "Full Stack Crossplatform Application Using Yarn Workspaces, Webpack, React and React Native",
  "scripts": {
    "api": "nodemon ./backend/api.js",
    "dev-app": "concurrently \"cd ./frontend/app && yarn android && yarn ios\"",
    "dev-web": "concurrently \"cd ./frontend/web && yarn start\"",
    "start": "concurrently \"yarn dev-app && yarn dev-web\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@app/shared": "1.0.0",
    "concurrently": "^6.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "hermes-engine": "0.5.2-rc1",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.7",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "wait-on": "^5.3.0"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/react": "^16.9.17",
    "@types/react-native": "^0.60.22"
  }
}
